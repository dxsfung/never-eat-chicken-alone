<div class="update_user thumbnail col-sm-offset-3 col-sm-6 col-xs-12" style='margin-top: 20px;'>
  <div class="user_block">
      <img id="user_img" src="<%= @user.image() %>" alt=“member_photo”>
  </div>
  <div class="update_preference_matching">
    <h3>Find a match</h3>
      <form class='form-group' action="/user_preference" method="post">
          <input name="_method" value="patch" type="hidden">
          <table class="table">
            <tr>
              <td>
                <i class="fa fa-venus-mars" aria-hidden=“true”></i> Gender Preference
              </td>
              <td>
                <label class='select-gender'>
                  <div style='padding-top: 5px;' class='col-xs-1'>
                    <input type="radio" name="gender_preference" value="M" required>
                  </div>
                    <i class="fa fa-male gender-icon male"></i>
                </label>
                <label class='select-gender'>
                  <div style='padding-top: 5px;' class='col-xs-1'>
                    <input type="radio" name="gender_preference" value="F" required>
                  </div>
                    <i class="fa fa-female gender-icon female"></i>
                </label>
                <label>
                  <div style='padding-top: 5px;' class='col-xs-1'>
                    <input type="radio" name="gender_preference" value="" required>
                  </div>
                    <i class="fa fa-male gender-icon male"></i><i class="fa fa-female gender-icon female"></i>
                </label>
              </td>
            </tr>
            <tr>
              <td>
                <i class="fa fa-cutlery" aria-hidden="true"></i> Cuisine
              </td>
              <td>
                <select name="cuisine_id" id="cuisine_id">
                    <option value="">Any</option>
                    <% @cuisines.each() do |cuisine| %>
                    <option value="<%= cuisine.id() %>"><%= cuisine.name() %></option>
                    <% end %>
                </select>
              </td>
            </tr>
            <tr>
              <td>
                <i class="fa fa-location-arrow" aria-hidden=“true”></i> District
              </td>
              <td>
                <select name="district_id" id="district_id">
                    <option value="">Any</option>
                    <% @districts.each() do |district| %>
                    <option value="<%= district.id() %>"><%= district.name() %></option>
                    <% end %>
                </select>
              </td>
            </tr>
            <tr>
              <td>
                <i class="fa fa-usd" aria-hidden=“true”></i> Budget
              </td>
              <td>
                <select name="budget_id" id="budget_id">
                    <option value="">Any</option>
                    <% @budgets.each() do |budget| %>
                    <option value="<%= budget.id() %>"><%= budget.scale() %></option>
                    <% end %>
                </select>
              </td>
            </tr>
            <tr>
              <td>
                <i class="fa fa-clock-o" aria-hidden=“true”></i> Time
              </td>
              <td>
                <select name="timeslot_id" id="timeslot_id">
                    <option value="">Any</option>
                    <% @timeslots.each() do |timeslot| %>
                    <option value="<%= timeslot.id() %>"><%= timeslot.time %></option>
                    <% end %>
                </select>
              </td>
            </tr>
          </table>
          <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search" aria-hidden="true"></i>
Match</button>
      </form>
  </div>

</div>

